<p id="notice"><%= notice %></p>

<h1>Turbo for free Hot Takes</h1>

<p>
  Page loaded at <%= Time.now %>
</p>

<turbo-frame id="hot_takes">
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @hot_takes.each do |hot_take| %>
        <tr>
          <td><%= hot_take.handle %></td>
          <td><%= hot_take.content %></td>
          <td><%= hot_take.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <h1>New Hot Take</h1>
  <%= render 'form', hot_take: @hot_take %>
</turbo-frame>
